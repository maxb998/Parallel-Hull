    "version": "0.2.0",
    "configurations": [
        {
            "type":"cppdbg",
            "name": "Debug",
            "preLaunchTask": "Build Debug",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/main",
            "args": [
                "--file", "data/round_100_1.csv",
                "--threads", "1",
            ],
            "cwd": "${workspaceFolder}"
       },
       {
            "type":"cppdbg",
            "name": "Exec",
            "preLaunchTask": "Build Exec",
            "request": "launch",
            "program": "${workspaceFolder}/bin/exec/main",
            "args": [
                "--file", "data/",
                "--threads", "1",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type":"cppdbg",
            "name": "mpirun",
            "preLaunchTask": "Build Exec",
            "request": "launch",
            "program": "mpirun",
            "args": [
                "mpirun", "-np", "4", "bin/exec/main",
                "--file", "data/",
                "--threads", "1",
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}
